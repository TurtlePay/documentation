  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "host": "blockapi.turtlepay.io",
  "tags": [
    {
      "name": "Chain/Cache Information"
    },
    {
      "name": "Block Information"
    },
    {
      "name": "Transaction Information"
    },
    {
      "name": "Wallet Operations"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/amounts": {
      "get": {
        "tags": [
          "Chain/Cache Information"
        ],
        "summary": "Returns the current mixable amounts on the network",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "integer"
                  },
                  "timestamp": {
                    "type": "integer"
                  },
                  "height": {
                    "type": "integer"
                  },
                  "txnHash": {
                    "type": "string"
                  },
                  "hash": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Mixable amounts not found"
          }
        }
      }
    },
    "/height": {
      "get": {
        "tags": [
          "Chain/Cache Information"
        ],
        "summary": "Returns the blockchain cache current height",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "height": {
                  "type": "integer",
                  "example": 1129669
                },
                "network_height": {
                  "type": "integer",
                  "example": 1129669
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/info": {
      "get": {
        "tags": [
          "Chain/Cache Information"
        ],
        "summary": "Returns current network information regarding the underlying network node(s)",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "alt_blocks_count": {
                  "type": "integer",
                  "example": 2
                },
                "difficulty": {
                  "type": "integer",
                  "example": 3115454145
                },
                "grey_peerlist_size": {
                  "type": "integer",
                  "example": 1089
                },
                "hashrate": {
                  "type": "integer",
                  "example": 103848471
                },
                "height": {
                  "type": "integer",
                  "example": 1129673
                },
                "incoming_connections_count": {
                  "type": "integer",
                  "example": 31
                },
                "last_known_block_index": {
                  "type": "integer",
                  "example": 1129671
                },
                "major_version": {
                  "type": "integer",
                  "example": 4
                },
                "minor_version": {
                  "type": "integer",
                  "example": 0
                },
                "network_height": {
                  "type": "integer",
                  "example": 1129673
                },
                "outgoing_connections_count": {
                  "type": "integer",
                  "example": 8
                },
                "start_time": {
                  "type": "integer",
                  "example": 1546895003
                },
                "status": {
                  "type": "string",
                  "example": "OK"
                },
                "supported_height": {
                  "type": "integer",
                  "example": 1000000
                },
                "synced": {
                  "type": "boolean",
                  "example": true
                },
                "testnet": {
                  "type": "boolean",
                  "example": false
                },
                "tx_count": {
                  "type": "integer",
                  "example": 1598886
                },
                "tx_pool_size": {
                  "type": "integer",
                  "example": 2
                },
                "upgrade_heights": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "example": [
                      187000,
                      350000,
                      440000,
                      620000,
                      700000,
                      800000,
                      1000000,
                      1200000,
                      1400000,
                      1600000,
                      1800000,
                      2000000
                    ]
                  }
                },
                "version": {
                  "type": "string",
                  "example": "0.12.0"
                },
                "white_peerlist_size": {
                  "type": "integer",
                  "example": 38
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/supply": {
      "get": {
        "tags": [
          "Chain/Cache Information"
        ],
        "summary": "Returns the current circulating currency supply in TRTL",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "example": 33090018087.69
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/block/count": {
      "get": {
        "tags": [
          "Block Information"
        ],
        "summary": "Returns the total number of blocks in the cache",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Block Count",
            "schema": {
              "type": "object",
              "properties": {
                "blockCount": {
                  "type": "integer",
                  "example": 1129692
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/block/{term}": {
      "get": {
        "tags": [
          "Block Information"
        ],
        "summary": "Returns the block information for the block with the specified hash or height",
        "parameters": [
          {
            "name": "term",
            "description": "Either the height of the block or the hash",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Block%20Detail"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/block/header/{term}": {
      "get": {
        "tags": [
          "Block Information"
        ],
        "summary": "Returns the block header for the block with the specified hash or height",
        "parameters": [
          {
            "name": "term",
            "description": "Either the height of the block or the hash",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Block%20Header"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/block/header/top": {
      "get": {
        "tags": [
          "Block Information"
        ],
        "summary": "Returns the top block header",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Block%20Header"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/block/headers/{height}": {
      "get": {
        "tags": [
          "Block Information"
        ],
        "summary": "Returns details regarding the 30 blocks preceeding the specified block including the specified block",
        "parameters": [
          {
            "name": "height",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "maxItems": 30,
              "items": {
                "$ref": "#/definitions/Block%20Summary"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/block/headers/{height}/bulk": {
      "get": {
        "tags": [
          "Block Information"
        ],
        "summary": "Returns details regarding the 1,000 blocks preceeding the specified block including the specified block",
        "parameters": [
          {
            "name": "height",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "maxItems": 1000,
              "items": {
                "$ref": "#/definitions/Block%20Summary"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/transaction/pool": {
      "get": {
        "tags": [
          "Transaction Information"
        ],
        "summary": "Returns the transactions currently in the mempool",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "txnHash": {
                    "type": "string",
                    "example": "375837ed9a78873ac6819b27c6f8b1b2614ce1a0ce56375e735c338baddb3d2c"
                  },
                  "fee": {
                    "type": "integer",
                    "example": 100
                  },
                  "size": {
                    "type": "integer",
                    "example": 6126
                  },
                  "amount": {
                    "type": "integer",
                    "example": 5910218
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/transaction/{hash}": {
      "get": {
        "tags": [
          "Transaction Information"
        ],
        "summary": "Returns details regarding the transaction with the specified hash",
        "parameters": [
          {
            "name": "hash",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/transaction/{hash}/inputs": {
      "get": {
        "tags": [
          "Transaction Information"
        ],
        "summary": "Returns the transcations inputs for the transaction with the specified hash",
        "parameters": [
          {
            "name": "hash",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Transaction%20Input"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/transaction/{hash}/outputs": {
      "get": {
        "tags": [
          "Transaction Information"
        ],
        "summary": "Returns the transcations outputs for the transaction with the specified hash",
        "parameters": [
          {
            "name": "hash",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Transaction%20Output"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/transactions/{paymentId}": {
      "get": {
        "tags": [
          "Transaction Information"
        ],
        "summary": "Returns the transcations hashes of all transactions with the specified paymentId",
        "parameters": [
          {
            "name": "paymentId",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "hash": {
                    "type": "string",
                    "example": "2ed24b81b0b51b86223002e8515b141b8a4b09215be2afa86de46153fa8f2167"
                  },
                  "mixin": {
                    "type": "integer",
                    "example": 4
                  },
                  "timestamp": {
                    "type": "integer",
                    "example": 1521317601
                  },
                  "fee": {
                    "type": "integer",
                    "example": 10
                  },
                  "size": {
                    "type": "integer",
                    "example": 22639
                  },
                  "amount": {
                    "type": "integer",
                    "example": 2048090
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/randomOutputs": {
      "post": {
        "tags": [
          "Wallet Operations"
        ],
        "summary": "Returns random outputs for transaction mixing",
        "parameters": [
          {
            "in": "body",
            "name": "Request",
            "description": "Provides a request for random outputs from the chain that meet the requirements",
            "schema": {
              "type": "object",
              "required": [
                "amounts"
              ],
              "properties": {
                "amounts": {
                  "type": "integer",
                  "example": [
                    1000,
                    5000,
                    20000
                  ]
                },
                "mixin": {
                  "type": "integer",
                  "example": 3,
                  "default": 3
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Random%20Output"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/sendrawtransaction": {
      "post": {
        "tags": [
          "Wallet Operations"
        ],
        "summary": "Returns all the necessary information for a wallet to discover which outputs belong to it",
        "parameters": [
          {
            "in": "body",
            "name": "Request",
            "description": "Provides a transaction that needs to be broadcast to the network",
            "schema": {
              "type": "object",
              "properties": {
                "tx_as_hex": {
                  "type": "string",
                  "example": ""
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK - Check the status property for the result of the daemon interaction",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "OK"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/sync": {
      "post": {
        "tags": [
          "Wallet Operations"
        ],
        "summary": "Returns all the necessary information for a wallet to discover which outputs belong to it",
        "parameters": [
          {
            "in": "body",
            "name": "Request",
            "description": "A syncronization request. Either lastKnownBlockHashes or scanHeight is required.",
            "schema": {
              "type": "object",
              "properties": {
                "lastKnownBlockHashes": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": [
                      "b226a29c8ea906d89ecda798993888307e2f9da86eb3787a63c9adb388c47bc1",
                      "b5b53a17371e3681f1ded1ddd20339f8c95f54e7774c4fb759db3367c5e75a2d"
                    ]
                  }
                },
                "blockCount": {
                  "type": "integer",
                  "example": 100,
                  "default": 100
                },
                "scanHeight": {
                  "type": "integer",
                  "example": 1100000
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Wallet%20Sync%20Block"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
