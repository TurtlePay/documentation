    "/button/new": {
      "post": {
        "tags": [
          "Payment Buttons"
        ],
        "summary": "Creates a new encrypted button payload for a request",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "buttonPayload": {
                      "type": "string",
                      "description": "The encrypted button payload",
                      "example": ""
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Failure"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "address",
                  "privateViewKey",
                  "amount"
                ],
                "properties": {
                  "address": {
                    "type": "string",
                    "description": "The address that we need to send the funds of the transaction to once they are sent to us",
                    "example": "TRTLuxfRv3q1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMjYUpKu"
                  },
                  "privateViewKey": {
                    "type": "string",
                    "description": "The Private View Key of the wallet address above (view only access)",
                    "example": "418626af5c4941a6860d5e8bff2ec4a5bfb123323f194c4718bfe6d45903aa08"
                  },
                  "amount": {
                    "type": "number",
                    "description": "The amount requested in atomic units",
                    "example": 100
                  },
                  "callback": {
                    "type": "string",
                    "description": "The URL to which we should post our callback responses",
                    "example": "https://webhook.site/8d2e1b19-d293-445a-b38e-9a2cd6d526a7"
                  },
                  "confirmations": {
                    "type": "number",
                    "description": "The number of confirmations we should wait for before relaying the funds and providing the appropriate callback response",
                    "example": 30,
                    "default": 60
                  },
                  "name": {
                    "type": "string",
                    "default": null,
                    "description": "If supplied, will be appended to the end of the QR code URL supplied as ?name=<name>"
                  },
                  "userDefined": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "description": "Creates a new payment request"
        }
      }
    },
