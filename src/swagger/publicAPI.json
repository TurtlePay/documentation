      "url": "https://opensource.org/licenses/AGPL-3.0"
    }
  },
  "tags": [
    {
      "name": "Payment Buttons"
    },
    {
      "name": "Payment Requests"
    }
  ],
  "paths": {
    "/button": {
      "post": {
        "tags": [
          "Payment Buttons"
        ],
        "summary": "Creates a new payment request using an encrypted button payload",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sendToAddress": {
                      "type": "string",
                      "description": "The address to provide the user to send funds to",
                      "example": "TRTLuxnZiWkAEhvAoGSkNEHG3aKS5db1WHnoxarheb4M9jLArMU59y2HxWzuyvsXCDHvvfk7c8dZSAZquLJiyv5f96P9kTcj1BM1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMipghbt"
                    },
                    "paymentId": {
                      "type": "string",
                      "description": "The payment ID the user must use (or the Integreated address in the sendToAddress field)",
                      "example": "376178ab0113a5ae930eda9e9de2419ede7aead3e8fbe7b7e65191de15f20b63"
                    },
                    "atomicAmount": {
                      "type": "number",
                      "description": "The atomic amount that the user needs to send to complete the request",
                      "example": 100
                    },
                    "startHeight": {
                      "type": "number",
                      "description": "The blockchain height that we will start looking for transactions to complete the request",
                      "example": 1132510
                    },
                    "endHeight": {
                      "type": "number",
                      "description": "The blockchain height that we will stop looking for transactions to complete the request",
                      "example": 1132570
                    },
                    "confirmations": {
                      "type": "number",
                      "description": "The number of confirmations that we will wait to pass once we find transactions destined for this request",
                      "example": 30
                    },
                    "qrCode": {
                      "type": "string",
                      "description": "A link to a QR code image that contains the required payment information to complete this request",
                      "example": "https://chart.googleapis.com/chart?cht=qr&chs=256x256&chl=turtlecoin://TRTLv2uxbWyZ4DM5BLo5fURdzapJ3U6nHMMDst5RjkrR4Yy2ZL3r5EC7nXGmq5x2fAQbdGKLFaMNRRasGRrS2WhRWHDkNQ7qaDP?amount=100"
                    },
                    "userDefined": {
                      "type": "object",
                      "description": "A copy of the data you supplied in the optional userDefined field"
                    },
                    "callbackPublicKey": {
                      "type": "string",
                      "description": "The Public Key of the Private Key the platform uses to sign callback messages",
                      "example": ""
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Failure"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "buttonPayload"
                ],
                "properties": {
                  "buttonPayload": {
                    "type": "string",
                    "description": "The encrypted button payload as supplied by the new button request",
                    "example": ""
                  },
                  "userDefined": {
                    "type": "object",
                    "description": "A copy of the data you supplied in the optional userDefined field"
                  }
                }
              }
            }
          },
          "description": "Creates a new payment request using an encrypted button payload"
        },
        "callbacks": {
          "receivedFunds": {
            "{$request.body#/callback}": {
              "post": {
                "summary": "Called when at least the requested funds have been sent to the specified wallet and enough confirmations have completed.",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "address": {
                            "type": "string",
                            "example": "TRTLuxnZiWkAEhvAoGSkNEHG3aKS5db1WHnoxarheb4M9jLArMU59y2HxWzuyvsXCDHvvfk7c8dZSAZquLJiyv5f96P9kTcj1BM1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMipghbt",
                            "description": "The address where the user should send funds"
                          },
                          "paymentId": {
                            "type": "string",
                            "example": "376178ab0113a5ae930eda9e9de2419ede7aead3e8fbe7b7e65191de15f20b63",
                            "description": "The payment ID the user must use (or the Integreated address in the sendToAddress field)"
                          },
                          "status": {
                            "type": "number",
                            "example": 100,
                            "description": "Continue"
                          },
                          "request": {
                            "type": "object",
                            "properties": {
                              "address": {
                                "type": "string",
                                "example": "TRTLuxN6FVALYxeAEKhtWDYNS9Vd9dHVp3QHwjKbo76ggQKgUfVjQp8iPypECCy3MwZVyu89k1fWE2Ji6EKedbrqECHHWouZN6g",
                                "description": "The address where we will be sending funds to"
                              },
                              "amount": {
                                "type": "number",
                                "example": 100,
                                "description": "The amount of funds requested"
                              },
                              "userDefined": {
                                "type": "object",
                                "description": "Any additional information supplied in the creation of the request"
                              }
                            }
                          },
                          "amount": {
                            "type": "number",
                            "example": 100,
                            "description": "The amount received into the temporary wallet created for this request"
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "OK"
                  }
                }
              }
            }
          },
          "inProgress": {
            "{$request.body#/callback}": {
              "post": {
                "summary": "Called when we have received funds for the request; however, we have not received all the funds requested or the funds have not reached the required confirmation depth.",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "address": {
                            "type": "string",
                            "example": "TRTLuxnZiWkAEhvAoGSkNEHG3aKS5db1WHnoxarheb4M9jLArMU59y2HxWzuyvsXCDHvvfk7c8dZSAZquLJiyv5f96P9kTcj1BM1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMipghbt",
                            "description": "The address where the user should send funds"
                          },
                          "paymentId": {
                            "type": "string",
                            "example": "376178ab0113a5ae930eda9e9de2419ede7aead3e8fbe7b7e65191de15f20b63",
                            "description": "The payment ID the user must use (or the Integreated address in the sendToAddress field)"
                          },
                          "status": {
                            "type": "number",
                            "example": 102,
                            "description": "Continue"
                          },
                          "request": {
                            "type": "object",
                            "properties": {
                              "address": {
                                "type": "string",
                                "example": "TRTLuxN6FVALYxeAEKhtWDYNS9Vd9dHVp3QHwjKbo76ggQKgUfVjQp8iPypECCy3MwZVyu89k1fWE2Ji6EKedbrqECHHWouZN6g",
                                "description": "The address where we will be sending funds to"
                              },
                              "amount": {
                                "type": "number",
                                "example": 100,
                                "description": "The amount of funds requested"
                              },
                              "userDefined": {
                                "type": "object",
                                "description": "Any additional information supplied in the creation of the request"
                              }
                            }
                          },
                          "amount": {
                            "type": "number",
                            "example": 100,
                            "description": "The amount received into the temporary wallet created for this request"
                          },
                          "confirmationsRemaining": {
                            "type": "number",
                            "example": 10,
                            "description": "The number of block confirmations remaining for the requested funds"
                          },
                          "blocksRemaining": {
                            "type": "number",
                            "example": 10,
                            "description": "The number of blocks which we will continue to scan for funds"
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "OK"
                  }
                }
              }
            }
          },
          "sentFunds": {
            "{$request.body#/callback}": {
              "post": {
                "summary": "Called when we relay funds to the specified wallet.",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "address": {
                            "type": "string",
                            "example": "TRTLuxnZiWkAEhvAoGSkNEHG3aKS5db1WHnoxarheb4M9jLArMU59y2HxWzuyvsXCDHvvfk7c8dZSAZquLJiyv5f96P9kTcj1BM1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMipghbt",
                            "description": "The address where the user should send funds"
                          },
                          "paymentId": {
                            "type": "string",
                            "example": "376178ab0113a5ae930eda9e9de2419ede7aead3e8fbe7b7e65191de15f20b63",
                            "description": "The payment ID the user must use (or the Integreated address in the sendToAddress field)"
                          },
                          "status": {
                            "type": "number",
                            "example": 200,
                            "description": "Continue"
                          },
                          "request": {
                            "type": "object",
                            "properties": {
                              "address": {
                                "type": "string",
                                "example": "TRTLuxN6FVALYxeAEKhtWDYNS9Vd9dHVp3QHwjKbo76ggQKgUfVjQp8iPypECCy3MwZVyu89k1fWE2Ji6EKedbrqECHHWouZN6g",
                                "description": "The address where we will be sending funds to"
                              },
                              "amount": {
                                "type": "number",
                                "example": 100,
                                "description": "DEPRECATED - The amount of funds received"
                              },
                              "userDefined": {
                                "type": "object",
                                "description": "Any additional information supplied in the creation of the request"
                              }
                            }
                          },
                          "amountReceived": {
                            "type": "number",
                            "example": 100,
                            "description": "The amount of funds received"
                          },
                          "amount": {
                            "type": "number",
                            "example": 90,
                            "description": "The amount received into the temporary wallet created for this request"
                          },
                          "transactions": {
                            "type": "array",
                            "description": "A list of transaction hashes containing funds for this request",
                            "items": {
                              "type": "string",
                              "example": [
                                "bdb052ef739064650239e53b34572a7f5d6103a7f68283d3218d306c4a77400a"
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "OK"
                  }
                }
              }
            }
          },
          "notEnoughFunds": {
            "{$request.body#/callback}": {
              "post": {
                "summary": "Called when we have received funds for the request; however, there are not enough funds available to forward the funds (due to the network transaction fee) to forward the funds to the requested wallet.",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "address": {
                            "type": "string",
                            "example": "TRTLuxnZiWkAEhvAoGSkNEHG3aKS5db1WHnoxarheb4M9jLArMU59y2HxWzuyvsXCDHvvfk7c8dZSAZquLJiyv5f96P9kTcj1BM1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMipghbt",
                            "description": "The address where the user should send funds"
                          },
                          "paymentId": {
                            "type": "string",
                            "example": "376178ab0113a5ae930eda9e9de2419ede7aead3e8fbe7b7e65191de15f20b63",
                            "description": "The payment ID the user must use (or the Integreated address in the sendToAddress field)"
                          },
                          "status": {
                            "type": "number",
                            "example": 402,
                            "description": "Continue"
                          },
                          "request": {
                            "type": "object",
                            "properties": {
                              "address": {
                                "type": "string",
                                "example": "TRTLuxN6FVALYxeAEKhtWDYNS9Vd9dHVp3QHwjKbo76ggQKgUfVjQp8iPypECCy3MwZVyu89k1fWE2Ji6EKedbrqECHHWouZN6g",
                                "description": "The address where we will be sending funds to"
                              },
                              "amount": {
                                "type": "number",
                                "example": 100,
                                "description": "The amount of funds requested"
                              },
                              "userDefined": {
                                "type": "object",
                                "description": "Any additional information supplied in the creation of the request"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "OK"
                  }
                }
              }
            }
          },
          "walletTimeout": {
            "{$request.body#/callback}": {
              "post": {
                "summary": "Called when the wallet created for the request times out as no funds were received into the wallet within the alloted time.",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "address": {
                            "type": "string",
                            "example": "TRTLuxnZiWkAEhvAoGSkNEHG3aKS5db1WHnoxarheb4M9jLArMU59y2HxWzuyvsXCDHvvfk7c8dZSAZquLJiyv5f96P9kTcj1BM1mUMQf5KdydAh7ewz1GrHsJVpYiWkonuRUCRWSuWUMkfL6p7a7g3Eq5N1FEctyxhv41S3cwC72caRfaAhMipghbt",
                            "description": "The address where the user should send funds"
                          },
                          "paymentId": {
                            "type": "string",
                            "example": "376178ab0113a5ae930eda9e9de2419ede7aead3e8fbe7b7e65191de15f20b63",
                            "description": "The payment ID the user must use (or the Integreated address in the sendToAddress field)"
                          },
                          "status": {
                            "type": "number",
                            "example": 408,
                            "description": "Request Timed Out"
                          },
                          "request": {
                            "type": "object",
                            "properties": {
                              "address": {
                                "type": "string",
                                "example": "TRTLuxN6FVALYxeAEKhtWDYNS9Vd9dHVp3QHwjKbo76ggQKgUfVjQp8iPypECCy3MwZVyu89k1fWE2Ji6EKedbrqECHHWouZN6g",
                                "description": "The address where we would have sent funds to"
                              },
                              "amount": {
                                "type": "number",
                                "example": 100,
                                "description": "The amount of funds requested"
                              },
                              "userDefined": {
                                "type": "object",
                                "description": "Any additional information supplied in the creation of the request"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "OK"
                  }
                }
              }
            }
          }
        }
      }
